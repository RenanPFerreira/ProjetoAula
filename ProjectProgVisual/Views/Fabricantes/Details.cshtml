@model ProjProgVisual.Models.Fabricante

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Detalhes da Empresa";
}
<div class="panel panel-primary">
	<div class="panel-heading">
		<div>
			<h4>Visualizando dados do fabricante</h4>
			<hr />
		</div>
	</div>
	<div class="panel-body">
			<!-- #Panel Nome -->
			<div class="form-group">
				@Html.LabelFor(model => model.Nome)
				<br />
				<div class="input-group">
					<span class="input-group-addon">
						<i class="glyphicon
                       glyphicon-user"></i>
					</span>
					@Html.EditorFor(model => model.Nome,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
				</div>
			</div>
			<!-- #endregion -->
		<!-- #Panel Footer -->
		<div class="panel-footer panel-info">
			@Html.ActionLink("Alterar", "Edit", new
   {
	   id =
	   Model.FabricanteId
   }, new
   {
	   @class =
	   "btn btn-info"
   })
			@Html.ActionLink("Retornar para a listagem",
       "Index", null, new { @class = "btn btn-info" })
		</div>
		<!-- #endregion -->
	</div>
</div>
@Html.Partial("~/Views/Produtos/_PorFabricante.cshtml", Model.Produtos.ToList())